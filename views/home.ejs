<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meli9</title>
    <style>
      .meli {
        height: 200px;
        width: 200px;
        background-color: yellow;
      }
    </style>
  </head>
  <body>
    <div class="code-token-area">
      <% if (locals.code) { %>
      <h1>Code: <%=code%></h1>
      <% } %>
      <p></p>
      <% if (locals.token) { %>
      <h1>Token: <%=token%></h1>
      <% } %>
    </div>
    <hr />
    <button class="meli" onclick="window.location.href='/getcode'">
      Gerar Code
    </button>
    <button class="meli" onclick="window.location.href='/gettoken'">
      Gerar Token
    </button>
    <button class="meli" onclick="window.location.href='/mmpublico'">
      MM - Dados Públicos
    </button>
    <button class="meli" onclick="window.location.href='/pessoais'">
      Informações Pessoais
    </button>
    <button class="meli" onclick="window.location.href='/pedidos'">
      Lista de Produtos
    </button>
    <button class="meli" onclick="window.location.href='/lista_de_produtos'">
      Lista de Produtos
    </button>
    <hr />
    <form action="/consultanome" method="POST">
      <label for="nome">Nome concorrente:</label>
      <input
        type="nome"
        id="consultanome"
        name="nome"
        placeholder="Insira o nome de um perfil do Mercado Livre aqui"
      />
      <button type="submit">Consultar Concorrente</button>
    </form>
    <form action="/consultaid" method="POST">
      <label for="id">ID concorrente:</label>
      <input
        type="id"
        id="consultaid"
        name="id"
        placeholder="Insira o ID de um perfil do Mercado Livre aqui"
      />
      <button type="submit">Consultar Concorrente</button>
    </form>
    <hr />
    <form action="/pedidos" method="POST">
      <label for="id">Offset:</label>
      <input type="offset" id="offsetasdf" name="offset" placeholder="0" />
      <button type="submit">Consultar Pedidos</button>
    </form>
    <% if (locals.url_api) { %>
    <div class="question-area">
      <h2>URL da API:</h2>
      <p><%=url_api%></p>
    </div>
    <% } %>
    <p></p>
    <% if (locals.resultado_api) { %>
    <div class="response-area">
      <h2>Resultado da API:</h2>
      <p><%=resultado_api%></p>
    </div>
    <% } %>
  </body>
</html>
